{
  "name": "api",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",

    "test": "cross-env NODE_ENV=test jest --runInBand",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --runInBand --coverage"
  },
  "dependencies": {
    "bcrypt": "*",
    "cors": "*",
    "dotenv": "*",
    "express": "*",
    "helmet": "*",
    "jsonwebtoken": "*",
    "mongoose": "*",
    "pino": "*",
    "pino-http": "*",
    "undici": "^7.16.0",
    "zod": "*"
  },
  "devDependencies": {
    "@types/bcrypt": "*",
    "@types/cors": "*",
    "@types/express": "*",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "*",
    "@types/node": "*",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "*",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "*",
    "typescript": "*"
  },
 "jest": {
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": [
    "**/__tests__/**/*.test.ts"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/src/__tests__/setup.ts"
  ],
  "coveragePathIgnorePatterns": [
    "<rootDir>/src/engine/",
    "<rootDir>/src/config/"
  ]
}
}
